<%= simple_nested_form_for(@methodology) do |f| %>
  <%= f.input :title, label: "Titulo" %>
  <%= f.input :teaser, label: "Teaser", input_html: {rows: 10, cols: 70} %>
  <%= f.input :content, label: "Conteúdo", input_html: { rows: 30, cols: 100 }%>
  <div class="methodology-images">
    <h2>Imagens</h2>
    <%= f.fields_for :images do |image_form| %>
      <%= render "images_fields", f: image_form %>
    <% end %>
    <%= f.link_to_add "Adicionar imagem", :images %>
  </div>
  <div class="methodology-videos">
    <h2>Vídeos</h2>
    <%= f.fields_for :videos do |video_form| %>
      <%= render "video_fields", f: video_form %>
    <% end %>
    <%= f.link_to_add "Adicionar video", :videos %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "GO", class: "btn btn-primary" %>
<% end %>